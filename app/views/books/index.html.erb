<main>
  
  <h1>Books</h1>
  
  
  
 <table>
    
   <thead>
     
    <tr>
  
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>

    </tr>
    
   </thead>

<tbody>
   <% @books.each do |book|%>
 <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%=link_to("Show",book_path(book))%></td>
     <td><<%=link_to("Edit",edit_book_path(book))%></td>
     <td><<%=link_to("Destroy",book_path(book),method: :delete)%></td>
 </tr>
  <% end %>
</tbody>

</table>


<div clas="new-heading"><h2>New Book</h2></div>


<div class="box">

  <%= form_with model:@book,local:true do |f| %>
  <p class="box-title">Title</p>
  <%= f.text_field :title %>
  <p class="box-title">Body</p>
  <%= f.text_area :body %>
  <div class="submi-box">
  <%= f.submit "Create Book"%>
  </div>
  <% end %>
  
</div>



</main>