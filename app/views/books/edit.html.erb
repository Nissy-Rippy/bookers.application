
  <h1>Editing Book</h1>
  <main>
   

  
   <div class="edit-box">
    <%= form_with model:@book,local:true do |f| %>
    
   <% if @book.errors.any? %>
   <%= @book.errors.count %>件のerrorが発生しました</br>
   <% @book.errors.full_messages.each do |message| %>
   <%= message %></br>
   <% end %>
   <% end %>
  
    <p>Title</p>
    <div class="edit-box1">
    <%= f.text_field :title %>
    </div>
    <p>Body</p>
    <div class="edit-box1">
    <%= f.text_area :body %>
   </div>
  
   <div class="edit-box2">
       <%= f.submit " Update Book "%>
   </div>
   <% end %>
   <%= link_to("Show",book_path(@book)) %>
   |
   <%= link_to("Back",books_path) %>

  
</main>